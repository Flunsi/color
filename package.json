{
	"name": "@flunsi/color",
	"version": "0.0.1",
	"description": "color",
	"keywords": [ "color" ],
	"author": "Niklaus Flunser",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Flunsi/color.git"
	},
	"bugs": {
		"url": "https://github.com/Flunsi/color/issues"
	},

	"type": "module",
	"files": [ "dist/*" ],
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",

	"scripts": {
		"tsc": "tsc",
		"lint": "eslint src/**/*.ts*",
		"test": "vitest",
		"testonce": "vitest run",
		"build": "tsup",
		"zip": "npm pack --pack-destination=./package",

		"ci": "npm run tsc && npm run lint && npm run testonce && npm run build && npm run zip",
		"release": "npm publish --access public"
	},

	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "6.12.0",
		"@flunsi/flunsi": "^0.0.15",
		"typescript": "^5.3.2",
		"eslint": "8.54.0",
		"tsup": "^8.0.1",
		"vitest": "^0.34.6"
	}
}
